<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amador.recyclerManageProduct">

    <application
        android:name="com.amador.recyclerManageProduct.model.ProductApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.amador.recyclerManageProduct.view.Login_Activity" />
        <activity android:name="com.amador.recyclerManageProduct.view.RecycleProductActivity" />
        <activity
            android:name="com.amador.recyclerManageProduct.view.SplashScreen_Activity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.amador.recyclerManageProduct.view.RegisterProductActivity"></activity>
    </application>

</manifest>